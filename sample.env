# Telegram Video Bot Configuration
# Copy this to .env and fill in your values

# Telegram Bot Token from @BotFather
BOT_TOKEN=

# Authorized user ID (only this user can use the bot)
ALLOWED_USER_ID=23682616

# Database file path (relative to bot directory)
DATABASE_FILE=bot.db

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Temp download directory
DOWNLOAD_DIR=/tmp

# Max file size in MB
MAX_FILE_SIZE_MB=50

# HandBrake preset for encoding
# Valid presets: Very Fast 720p30, Fast 720p30, Fast 1080p30, HQ 720p30 Surround
HANDBRAKE_PRESET=Very Fast 720p30
